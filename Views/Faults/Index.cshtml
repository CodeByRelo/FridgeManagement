@model IEnumerable<FridgeManagement.Models.Fault>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FaultDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fridge)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FaultDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fridge.Model)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FaultID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FaultID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FaultID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
