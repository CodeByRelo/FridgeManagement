@model IEnumerable<FridgeManagement.Areas.Identity.Data.FridgeManagementUser>

@{
    ViewData["Title"] = "Customer List";
    Layout = "~/Views/Shared/_LoggedInLayout.cshtml";
}

<h1>Customers</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Customer</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>User Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Email</td>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.UserRole</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
