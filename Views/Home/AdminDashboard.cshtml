@using Microsoft.AspNetCore.Identity
@using FridgeManagement.Areas.Identity.Data

@inject SignInManager<FridgeManagementUser> SignInManager
@inject UserManager<FridgeManagementUser> UserManager

@{
    var user = UserManager.GetUserAsync(User).Result; // Get the user synchronously (not recommended for long-term use)
    var firstName = user?.FirstName;
}

@{
    ViewData["Title"] = "AdminDashBoard";
    Layout = "~/Views/Shared/_LoggedInLayout.cshtml";
}

<!-- Admin Dashboard Layout -->
<section class="admin-hero">
    <div class="admin-welcome">
        <h2>Hi, @firstName</h2>
        <p>You can manage customers, employees, fridges, suppliers, and more from here. Use the buttons below to navigate to different sections of the dashboard.</p>
    </div>
</section>

<section class="admin-links">
    <div class="container-fluid py-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4 wow fadeIn" data-wow-delay="0.1s">
                    <div class="feature-item position-relative bg-primary text-center p-3">
                        <div class="border py-5 px-3">
                            <a href="/Customers/Index" class="admin-btn">Manage Customers</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 wow fadeIn" data-wow-delay="0.3s">
                    <div class="feature-item position-relative bg-primary text-center p-3">
                        <div class="border py-5 px-3">
                            <a href="/Fridges/Index" class="admin-btn">Manage Inventory</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 wow fadeIn" data-wow-delay="0.5s">
                    <div class="feature-item position-relative bg-primary text-center p-3">
                        <div class="border py-5 px-3">
                            <a href="/Employees/Index" class="admin-btn">Manage Employees</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 wow fadeIn" data-wow-delay="0.1s">
                    <div class="feature-item position-relative bg-primary text-center p-3">
                        <div class="border py-5 px-3">
                            <a href="/Locations/Index" class="admin-btn">Manage Locations</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 wow fadeIn" data-wow-delay="0.3s">
                    <div class="feature-item position-relative bg-primary text-center p-3">
                        <div class="border py-5 px-3">
                            <a href="/Suppliers/Index" class="admin-btn">Manage Suppliers</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



