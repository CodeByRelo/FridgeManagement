@model IEnumerable<FridgeManagement.Models.FridgeAllocation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AllocationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fridge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AllocationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fridge.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.FirtsName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AllocationID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AllocationID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AllocationID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
